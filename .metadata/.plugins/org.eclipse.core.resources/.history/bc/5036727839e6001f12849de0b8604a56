	}

	public int orangesRotting(int[][] grid) {
		int max = -1;
		int oranges = 0;
		int n = grid.length, m = grid[0].length;
		Queue<int[]> q = new LinkedList<>();

		for (int i = 0; i < n; i++) {
			for (int j = 0; j < m; j++) {
				if (grid[i][j] == 1)
					oranges++;
				if (grid[i][j] == 2)
					q.add(new int[] { i, j });
			}
		}
		if (oranges == 0)
			return 0;
		int rottenTime = 0;

		int[][] dirs = { { 1, 0 }, { -1, 0 }, { 0, 1 }, { 0, -1 } };

		while (!q.isEmpty()) {
			rottenTime++;
			
			int[] cell = q.poll();
			int x = cell[0];
			int y =cell[1];
			
			for(int[] dir : dirs) {
				int newX = 
			}

		}

		return 0;
	}

}
